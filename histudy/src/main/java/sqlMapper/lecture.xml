<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.histudy.lecture">
   <select id="lectureList" resultType="com.histudy.lecture.model.LectureDTO">
      select *
      from(select rownum as rnum,a.*
      from(select * from lecture order by lecture_idx desc) a)
      b where rnum <![CDATA[>=]]>#{start} and rnum <![CDATA[<=]]>#{end}
   </select>
   <select id ="lectureContent" parameterType="int" resultType="com.histudy.lecture.model.LectureDTO">
      select *
      from lecture
      where lecture_idx=#{idx}
   </select>
   <insert id="lectureMemoInsert" parameterType="String">
      insert into lecture_note values(
         lecture_note_idx.nextval,
         #{note_title},
         #{note_content},
         #{user_idx},
         #{lecture_idx}
      )
   </insert>
   <select id="getTotalCnt" resultType="Integer">
  	 select count(*) from lecture
   </select>
   <select id="reviewList" parameterType="int" resultType="com.histudy.lecture.model.LectureDTO">
   	select * 
   	from lectureReview
   	where lectureIdx=${lectureIdx}
   	order by review_date desc
   </select>
   <select id="reviewScore" parameterType="int" resultType="double">
   	select avg(review_score)
   	from lecture_review
   	where lecture_idx=#{lecture_idx}
   </select>
   <select id="reviewCount" parameterType="int" resultType="int">
    select count(*) 
    from lecture_review 
    where lecture_idx=#{lecture_idx}
	</select>
</mapper>