<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.histudy.lecture">
	<select id="lectureList" resultType="com.histudy.lecture.model.LectureDTO">
		select *
		from lecture
		order by lecture_idx desc
	</select>
	<select id ="lectureContent" parameterType="int" resultType="com.histudy.lecture.model.LectureDTO">
		select *
		from lecture
		where idx=#{idx}
	</select>
</mapper>