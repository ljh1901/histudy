<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- JDBC 마이 바티스 설정 -->
	<!-- 1. DB 등록 -->
	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName"
			value="oracle.jdbc.driver.OracleDriver" />
		<property name="url"
			value="jdbc:oracle:thin:@localhost:1521:xe" />
		<property name="username" value="scott" />
		<property name="password" value="1234" />
	</bean>
	<!-- 2. 트랜잭션 관리자 등록 -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>
	<!-- 3. 설정 파일 로딩 -->
	<bean id="sqlSessionFactoryBean"
		class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation"
			value="classpath:/mybatis-config.xml" />
	</bean>
	<!-- 4. 설정 파일 로딩후 그에 맞는 객체를 꺼내옴 -->
	<bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg name="sqlSessionFactory" ref="sqlSessionFactoryBean"></constructor-arg>
	</bean>
	<!-- DAO -->
	<bean id="studyDao" class="com.histudy.study.model.StudyDAOImple">
		<constructor-arg ref="sqlSessionTemplate"></constructor-arg>
	</bean>
	<bean id="userDAO" class="com.histudy.user.model.UserDAOImple">
		<constructor-arg ref="sqlSessionTemplate"></constructor-arg>
	</bean>
	<bean id="adminDAO" class="com.histudy.admin.model.AdminDAOImple">
   	 <constructor-arg ref="sqlSessionTemplate" />
	</bean>
	
	<bean id="faqDAO" class="com.histudy.admin.model.FaqDAOImple">
		<constructor-arg ref="sqlSessionTemplate"/>
	</bean>
	
	<bean id="noticeDAO" class="com.histudy.admin.model.NoticeDAOImple">
		<constructor-arg ref="sqlSessionTemplate"/>
	</bean>
	
	<bean id="lectureDAO" class="com.histudy.lecture.model.LectureDAOImple">
   	 <constructor-arg ref="sqlSessionTemplate" />
	</bean>
	<bean id="mentoringDAO" class="com.histudy.mentoring.model.MentoringDAOImple">
		<constructor-arg ref="sqlSessionTemplate"/>
	</bean>
		<bean id="studycafeDAO" class="com.histudy.studycafe.model.StudycafeDAOImple">
		<constructor-arg ref="sqlSessionTemplate"/>
	</bean>
</beans>

