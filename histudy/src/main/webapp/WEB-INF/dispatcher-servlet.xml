<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/mvc
	http://www.springframework.org/schema/mvc/spring-mvc.xsd">
	<!-- Controller Auto scan 등록 -->
	<context:component-scan base-package="com.histudy"></context:component-scan>
	<!-- 설정 관련 파일 -->
	<!-- 자동 주입 등록 -->
	<bean id="Autowired" class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"></bean>
	<!-- ViewResolver 등록 -->
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="WEB-INF/views/"></property>
		<property name="suffix" value=".jsp"></property>
		<property name="order" value="1"></property>
	</bean>
	<!-- MultiPart/Download Module -->
	<bean class="org.springframework.web.servlet.view.BeanNameViewResolver">
		<property name="order" value="0"></property>
	</bean>
	<!-- 파일 업로드를 사용하기 위한 라이브러리 -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="10485760"></property>
	</bean>
	<bean id="downloadView" class="com.histudy.view.DownloadView"></bean>	
	<!-- JSON -->
	<mvc:annotation-driven>
		<mvc:message-converters>
			<bean class="org.springframework.http.converter.StringHttpMessageConverter">
				<constructor-arg value="utf-8"></constructor-arg>
			</bean>
			<bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
				<property value="UTF-8" name="defaultCharset"></property>
			</bean>
		</mvc:message-converters>
	</mvc:annotation-driven>

	<!-- Service -->
	<bean id="studyService" class="com.histudy.study.service.StudyServiceImple">
		<constructor-arg ref="studyDao"></constructor-arg>
	</bean>
		<!-- services -->
	<bean id="userService" class="com.histudy.user.service.UserServiceImple">
		<constructor-arg ref="userDAO" />
	</bean>
</beans>
