<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/mvc
	http://www.springframework.org/schema/mvc/spring-mvc.xsd">
	<!-- Controller Auto scan 등록 -->
	<context:component-scan base-package="com.histudy"></context:component-scan>
	<!-- 설정 관련 파일 -->
	<!-- 자동 주입 등록 -->
	<bean id="Autowired" class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"></bean>
	<!-- ViewResolver 등록 -->
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="WEB-INF/views/"></property>
		<property name="suffix" value=".jsp"></property>
		<property name="order" value="1"></property>
	</bean>
	<!-- MultiPart/Download Module -->
	<bean class="org.springframework.web.servlet.view.BeanNameViewResolver">
		<property name="order" value="0"></property>
	</bean>
	<!-- 파일 업로드를 사용하기 위한 라이브러리 -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="10485760"></property>
	</bean>
	<bean id="downloadView" class="com.histudy.view.DownloadView"></bean>	
	<!-- JSON -->
	<mvc:annotation-driven>
		<mvc:message-converters>
			<bean class="org.springframework.http.converter.StringHttpMessageConverter">
				<constructor-arg value="utf-8"></constructor-arg>
			</bean>
			<bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
				<property value="UTF-8" name="defaultCharset"></property>
			</bean>
		</mvc:message-converters>
	</mvc:annotation-driven>

	<!-- Service -->
	<!-- 스터디 관련 서비스 -->
	<bean id="studyService" class="com.histudy.study.service.StudyServiceImple">
		<constructor-arg ref="studyDao"></constructor-arg>
	</bean>
	<bean id="studyApplyService" class="com.histudy.study.service.StudyApplyServiceImple">
		<constructor-arg ref="studyApplyDao"></constructor-arg>
	</bean>
	<!-- 회원 서비스 -->
	<bean id="userService" class="com.histudy.user.service.UserServiceImple">
		<constructor-arg ref="userDAO" />
	</bean>
	<!-- 스케줄 서비스 -->
	<bean id="scheduleService" class="com.histudy.schedule.service.ScheduleServiceImple">
		<constructor-arg ref="scheduleDAO" />
	</bean>
	
	<!-- 관리자 서비스 -->
	<bean id="adminService" class="com.histudy.admin.service.AdminServiceImple">
    	<constructor-arg ref="adminDAO"/>
	</bean>
	<!-- 관리자 유저 관리 서비스 -->
	<bean id="adminUserService" class="com.histudy.admin.service.AdminUserServiceImple">
    	<constructor-arg ref="adminUserDAO"/>
	</bean>
	<!-- 관리자 신고 관리 서비스 -->
	<bean id="adminReportService" class="com.histudy.admin.service.AdminReportServiceImple">
    	<constructor-arg ref="adminReportDAO"/>
	</bean>
	<!-- 관리자 스터디 서비스 -->
	<bean id="adminStudyService" class="com.histudy.admin.service.AdminStudyServiceImple">
    	<constructor-arg ref="adminStudyDAO"/>
    	</bean>
	<!-- 강의수강 서비스 -->
	<bean id="lectureService" class="com.histudy.lecture.service.LectureServiceImple">
		<constructor-arg ref="lectureDAO"/>
	</bean>
	<!-- 자주묻는질문 서비스 -->
	<bean id="faqService" class="com.histudy.admin.service.FaqServiceImple">
		<constructor-arg ref="faqDAO"/>
	</bean>
	<!-- 공지사항 서비스 -->
	<bean id="noticeService" class="com.histudy.admin.service.NoticeServiceImple">
		<constructor-arg ref="noticeDAO"/>
	</bean>
	<!--  멘토링 서비스 -->
	<bean id="mentoringService" class="com.histudy.mentoring.service.MentoringServiceImple">
		<constructor-arg ref="mentoringDAO"/>
	</bean>
	<!-- 스터디 카페 서비스 -->
	<bean id="studycafeService" class="com.histudy.studycafe.service.StudycafeServiceImple">
		<constructor-arg ref="studycafeDAO"></constructor-arg>
	</bean>
	<!-- LMS 서비스 -->
	<bean id="lmsService" class="com.histudy.lms.service.LmsServiceImple">
		<constructor-arg ref="lmsDAO"></constructor-arg>
	</bean>
	<bean id="lmsSubmitService" class="com.histudy.lms.service.LmsSubmitServiceImple">
		<constructor-arg ref="lmsSubmitDAO"></constructor-arg>
	</bean>
	<bean id="notificationsService" class="com.histudy.notifications.service.NotificationsServiceImple">
		<constructor-arg ref="notificationsDAO"></constructor-arg>
	</bean>
</beans>